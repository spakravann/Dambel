                    <!--android:numStars="5"-->
                    <!--android:rating="3.5"-->
                    <!--android:layout_margin="3dp"-->
                    <!--android:padding="10dp"-->
                    <!--android:stepSize="0.5"/>-->

            <!--</RelativeLayout>-->




        </RelativeLayout>


    </LinearLayout>
</LinearLayout>

