                <!--android:layout_margin="4dp"-->
                <!--android:background="@color/colorGrayishBrown"-->
                <!--android:layout_alignParentBottom="true">-->

                <!--<com.faraa.sohrabpakravan.dambel.Helpers.CustomRatingBar-->
